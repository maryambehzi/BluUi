<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:background="@drawable/header_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/include"
            layout="@layout/custome_toolbar" />

        <TextView
            android:id="@+id/text_balance_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeMargin"
            android:textColor="?android:textColorPrimary"
            tools:text="78500000"
            android:textSize="@dimen/normalText"
            app:layout_constraintTop_toBottomOf="@id/include"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normalMargin"
            android:textColor="?android:textColorPrimary"
            android:text="@string/text_balence_title"
            app:layout_constraintTop_toBottomOf="@id/text_balance_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            android:layout_width="@dimen/xlargeMargin"
            android:layout_height="@dimen/xlargeMargin"
            android:layout_marginTop="@dimen/xxlargeMargin"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/add"
            app:iconSize="@dimen/iconDimension"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:iconTint="@null"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            app:layout_constraintTop_toTopOf="@id/text_balance_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_box"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:text="@string/text_title_add"
            android:layout_marginTop="@dimen/smallMargin"
            app:layout_constraintStart_toStartOf="@id/button_add"
            app:layout_constraintEnd_toEndOf="@id/button_add"
            app:layout_constraintTop_toBottomOf="@id/button_add"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_box"
            android:layout_width="@dimen/xlargeMargin"
            android:layout_height="@dimen/xlargeMargin"
            android:layout_marginTop="@dimen/xxlargeMargin"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_white"
            app:icon="@drawable/spaces"
            app:iconSize="@dimen/iconDimension"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintStart_toEndOf="@id/button_chart"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded.SecondaryButton"
            app:layout_constraintTop_toTopOf="@id/text_balance_title"
            app:layout_constraintEnd_toStartOf="@id/button_add"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smallMargin"
            android:text="@string/text_title_box"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintEnd_toEndOf="@id/button_box"
            app:layout_constraintStart_toStartOf="@id/button_box"
            app:layout_constraintTop_toBottomOf="@id/button_box" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_chart"
            android:layout_width="@dimen/xlargeMargin"
            android:layout_height="@dimen/xlargeMargin"
            android:layout_marginTop="@dimen/xxlargeMargin"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/chart"
            app:iconSize="@dimen/iconDimension"
            app:iconPadding="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            app:layout_constraintTop_toTopOf="@id/text_balance_title"
            app:layout_constraintEnd_toStartOf="@id/button_box"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_title_chart"
            android:textColor="?android:textColorPrimary"
            android:layout_marginTop="@dimen/smallMargin"
            app:layout_constraintStart_toStartOf="@id/button_chart"
            app:layout_constraintEnd_toEndOf="@id/button_chart"
            app:layout_constraintTop_toBottomOf="@id/button_chart"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>